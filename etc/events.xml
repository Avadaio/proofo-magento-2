<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_submit_all_after">
        <observer name="proofo_new_order_sync" instance="Mageplaza\Proofo\Observer\SyncOrder"/>
    </event>
    <event name="checkout_cart_product_add_before">
        <observer name="proofo_add_to_cart_sync" instance="Mageplaza\Proofo\Observer\SyncAddToCart"/>
    </event>
    <event name="customer_register_success">
        <observer name="proofo_new_customer_sync" instance="Mageplaza\Proofo\Observer\NewCustomer"/>
    </event>
</config>
